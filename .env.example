# Database Configuration
# For PostgreSQL (production)
KB_POSTGRES_URL=postgresql://kbuser:password@localhost:5432/temporal_kb
# For SQLite (local development)
# KB_DB_PATH=/path/to/data/db/kb.db

# Application Paths
KB_DATA_DIR=/path/to/kb-data
KB_CONFIG_DIR=/path/to/.temporal-kb/config

# API Configuration
KB_API_HOST=localhost
KB_API_PORT=8000
KB_API_CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Security
KB_JWT_SECRET=your-secret-key-here-generate-with-secrets-token-hex-32
KB_API_KEYS=["your-api-key-1","your-api-key-2"]

# Features
KB_GIT_ENABLED=true
KB_GIT_AUTO_COMMIT=true
KB_SEMANTIC_SEARCH_ENABLED=true
KB_EMBEDDING_MODEL=all-MiniLM-L6-v2
KB_ENCRYPTION_ENABLED=false

# Logging
KB_LOG_LEVEL=INFO
KB_LOG_FILE=/path/to/kb-data/kb.log